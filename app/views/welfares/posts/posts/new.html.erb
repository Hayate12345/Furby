<% if @post.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <% @post.errors.each do |error| %>
      <strong>エラー！</strong> - <%= error.full_message %><br>
    <% end %>
  </div>
<% end %>
<%= form_with(model: @post, url: "welfares/posts/create", local: true) do |f| %>
  <div class="mb-3">
    <%= f.text_area :content, class: "form-control", placeholder: "ゴミ拾いの内容を投稿しよう！", rows: 3 %>
    <label></label>
  </div>
  <%= f.submit "投稿する", class: "btn btn-success px-5" %>
<% end %>
